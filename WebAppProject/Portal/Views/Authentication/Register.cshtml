@section Scripts {
    <script src="~/js/loadingIcon.js"></script>
}
@model RegisterModel
<div class="row d-flex justify-content-center align-items-center" style="height:80vh">
    <div class="col-12 col-md-6 col-lg-4 px-3 py-5 m-5 rounded-3 bg-light">
        <div class="">
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-action="Register" asp-controller="Authentication" method="post">
                <div class="form-group my-2">
                    <label asp-for="Email"></label>
                    <div asp-validation-for="Email" class="text-danger"></div>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group my-2">
                    <label asp-for="Password">Wachtwoord</label>
                    <div asp-validation-for="Password" class="text-danger"></div>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="form-group my-2">
                    <label asp-for="PasswordCheck">Herhaal uw wachtwoord</label>
                    <div asp-validation-for="Password" class="text-danger"></div>
                    <input asp-for="PasswordCheck" type="password" class="form-control" />
                </div>
                <button id="loginButton" class="btn btn-primary my-3 float-right" onclick="loadingIcon()" type="submit">
                    <div id="buttonTextDiv" style="">
                        Registreren
                    </div>
                    <div id="loadingIconDiv" style="display: none">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span class="sr-only">Laden...</span>
                    </div>
                </button>
            </form>
        </div>
    </div>
</div>