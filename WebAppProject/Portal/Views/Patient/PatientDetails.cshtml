@model PatientDetailsViewModel

@{
    ViewData["Title"] = "View";
    //< a asp - action = "Edit" asp - route - id = "" > Edit </ a > | @Model.PatientId
}



<div class="py-3">
    <div class="row d-inline-flex justify-content-center">
        <div class="col-9">
            <h1>@Html.DisplayFor(model => model.Name)</h1>
        </div>
        <div class="col-3">
            <a class="btn btn-primary text-center my-auto" asp-action="EditPatient" asp-route-id="@Model.PatientId">Edit</a>
        </div>
    </div>
    <hr />
    <dl class="row d-flex">
        <dt class="col-sm-2">
            Diagnose lichaamsdeel
        </dt>
        <dd class="col-sm-10">
            @Model.Diagnosis.BodyLocalisation
        </dd>
        <dt class="col-sm-2">
            Diagnosebeschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiagnosisDescription)
        </dd>
        <dt class="col-sm-2">
            Aandoening
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Condition)
        </dd>
        <dt class="col-sm-2">
            Patientsoort
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KindOfPatient)
        </dd>
        <dt class="col-sm-2">
            Intake door
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IntakeBy.Name)
        </dd>
        <dt class="col-sm-2">
            Intake onder supervisie van
        </dt>
        @if (Model.IntakeUnderSupervisionOf != null) {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IntakeUnderSupervisionOf.Name)
            </dd>
        } else {
            <dd class="col-sm-10">
                N.V.T
            </dd>
        }
        <dt class="col-sm-2">
            IntakeDatum
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfAdmission.ToString("d",ViewBag.cultureInfo)
        </dd>
        <dt class="col-sm-2">
            Hoofdtherapeut
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MainTherapist.Name)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Terug naar home</a>
</div>
